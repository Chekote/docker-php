# chekote/php:${PHP_VERSION}-phpunit7
ARG PHP_VERSION=7.4
FROM chekote/php:${PHP_VERSION}-phpunit5

ENV MIN_PHP_VERSION '7.1'

# No additional package requirements beyond base image.
# See https://github.com/sebastianbergmann/phpunit/blob/7.0.0/composer.json
# See https://phpunit.de/manual/7.0/en/installation.html#installation.requirements

RUN set -eu; \
    #
    check_php_version ${MIN_PHP_VERSION}; \
    #
    # Make sure everything works
    php -v; \
    php-fpm${PHP_VERSION} -v
